        <div>
            <form>
                <h4>Add payment:</h4>
                <div class="panel panel-default">
                    <div class="panel-body form-horizontal payment-form">
                        <div class="form-group">
                            <label for="order_id" class="col-sm-3 control-label">order_id</label>
